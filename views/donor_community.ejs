                <video class="vid" width="450" height="300" autoplay>
                    <source src="images/SearchDonor.mp4" type="video/mp4">
                   
                  </video>
            </div>
            <div class="search">
                <h4 id="searchinghead">Search</h4>
                <form action="/search" method="post">
                    <label  for="city">Enter city </label>
                    <input name="city" id="city" type="text" placeholder="Enter your city">
