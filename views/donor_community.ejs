                    </div>
                    <!-- <div class="listdcdiv">
                        <p class="info">Chat</p>
                        <p>Click here to chat</p>
                    </div> -->
                    <div class="listdcdiv">
                        
                        <p><%=user.blood%></p>
                    </div>
                    <!-- <div class="listdcdiv">
                        <p class="info">Contact Number</p>
                        <p><%=user.contact%></p>
                    </div> -->
                    <div class="listdcdiv">
                        
                        <a href="chat">Chat here</a></p>
                       
                    </div>
        
                    <div class="listdcdiv">
                       
                        <p><%=user.email%></p>
                    </div>
                </li>
