<%- include('../includes/head.ejs')%>
<link rel="stylesheet" href="css/signup.css">
</head>
    <body>
        <%- include('../includes/navbar.ejs')%>
        
        <div class="signup-box">
          <% if(errorMessage){%>
            <p class="signupmsg"><%=errorMessage%></p>
          <%}else{%>
            <p class="signupmsg"></p>
          <%}%>
          <h1>User Sign Up</h1>
        <form action="/signupuser" method="post">
            <label>Username</label>
            <input value="<%=oldInput.username%>" name="username" id="Username" type="text" placeholder="" />
            <label>Email</label>
            <input value="<%=oldInput.email%>" name="email" id="email" type="email" placeholder="" />
            <label>Password</label>
            <input value="<%=oldInput.password%>" name="password" id="password" type="password" placeholder="" />
            <div id="toggler" onclick="showHide()"><img class="img imgtoggling" src="images/eye.png" alt=""></div>
            <button class="btnlogin" type="submit">Signup</button>
        </form>
          <p class="para-2">
            Already have an account? <a href="/login">Login here</a>
          </p>
        </div>
    
<%- include('../includes/tail.ejs')%>