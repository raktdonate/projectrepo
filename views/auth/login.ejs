</head>
<body>
    <%- include('../includes/navbar.ejs')%>
      <div class="login-box">
        <% if(errorMessage){%>
          <p class="signupmsg"><%=errorMessage%></p>
        <%}else{%>
          <p class="signupmsg"></p>
        <%}%>
        <h1>Login</h1>

        <form action="/login" method="post">
          <label>Email</label>
          <input value="<%=oldInput.email%>" name="email" id="email" type="email" placeholder="" />
          <label>Password</label>
          <input value="<%=oldInput.password%>" name="password" id="password" type="password" placeholder="" />
          <div id="toggler" onclick="showHide()"><img class="img" src="images/eye.png" alt=""></div>
          <div class="reset">
            <a href="/reset">Forget Password?</a>
        </div>
          <button class="btnlogin" type="submit">Login</button>
        </form>
        <p class="para-2">
          Don't have an account? <a href="/signup">Sign Up Here</a>
        </p>
      </div>
<%- include('../includes/tail.ejs')%>