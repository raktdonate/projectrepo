                <h2>OR</h2>
                <label class="labelst" for="">State</label>
                <input class="statein" name="state" type="text">
                <button class="btnsub" type="submit">Search</button>
            </form>
        </div>
    </div>
    <section>
        <!--for demo wrap-->
        <!-- <h1></h1> -->
        <div class="tbl-header">
          <table cellpadding="0" cellspacing="0" border="0">
            <thead>
              <tr>
                <th>Blood Bank</th>
                <th>City</th>
                <th>Full Address</th>
                <th>Email</th>
                <th>Mobile</th>
              </tr>
            </thead>
          </table>
        </div>
        <div class="tbl-content">
          <table cellpadding="0" cellspacing="0" border="0">
            <tbody>
                <%if(userData2.length>=0){%>
                    <% for(let data of userData2){%>
              <tr>
                <td><%=data.BloodBankName%></td>
                <td><%=data.City%></td>
                <td><%=data.Address%></td>
                <td><%=data.Email%></td>
                <td><%=data.Mobile%></td>
              </tr>
              <%}%>
              <%}%>
            </tbody>
          </table>
        </div>
      </section>
    
